<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="corp.burenz.expertouch.activities.HelpCenter"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/helpBackAnimation"
            android:inAnimation="@anim/md_styled_slide_up_slow"
            android:visibility="visible"
            android:autoStart="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView173"
                android:scaleType="centerCrop"
                android:src="@raw/houses" />

        </ViewFlipper>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="#90000000">

            <LinearLayout tools:context="corp.burenz.expertouch.activities.Profile"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <ViewFlipper
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/helpBulbFlipper"
                    android:inAnimation="@anim/abc_fade_in"
                    android:outAnimation="@anim/abc_fade_out"
                    android:autoStart="true"
                    android:layout_gravity="center_horizontal"
                    android:flipInterval="800">


                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView190"
                        app:iiv_color="#FFEB3B"
                        app:iiv_icon="@string/gmd_lightbulb_outline"
                        />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView191"
                        app:iiv_color="@color/vectorColor"
                        app:iiv_icon="@string/gmd_lightbulb_outline"

                        />

                </ViewFlipper>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Help Center"
                        android:id="@+id/textView483"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Happy To Help"
                        android:id="@+id/textView484"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/basicHelpL">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView174"
                                android:layout_gravity="center"
                                android:src="@drawable/laptop_experts"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Basics"
                                android:id="@+id/textView588"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Guide to app"
                                android:id="@+id/textView593"
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="1dp"
                            android:id="@+id/hireExpertsHelp"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView157"
                                android:layout_gravity="center"
                                android:src="@drawable/engineers_experts"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Hire"
                                android:id="@+id/textView273"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Hiring an expert"
                                android:id="@+id/textView594"
                                android:textColor="#ffffff"
                                android:textSize="10dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/bucketHelp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView94"
                                android:layout_gravity="center"
                                android:src="@drawable/hot_w"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Bucket"
                                android:id="@+id/textView193"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="The bucket Store"
                                android:id="@+id/textView194"
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="1dp"
                            android:id="@+id/businessHelp"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView107"
                                android:layout_gravity="center"
                                android:src="@drawable/consultants_vector"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Bussiness"
                                android:id="@+id/textView511"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="A Business Account"
                                android:id="@+id/textView590"
                                android:textColor="#ffffff"
                                android:textSize="10dp"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/profileHelp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView187"
                                android:layout_gravity="center"
                                android:src="@drawable/labours"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Profile"
                                android:id="@+id/textView591"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Your Information"
                                android:id="@+id/textView592"
                                android:textColor="#ffffff"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/otherHelp"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView67"
                                android:layout_gravity="center"
                                android:src="@drawable/other_experts"
                                android:cropToPadding="true"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Others"
                                android:id="@+id/textView290"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Other info"
                                android:id="@+id/textView303"
                                android:textColor="#ffffff"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView12"
                android:layout_weight="1">

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bc000000"
            android:id="@+id/swapSheild"
            android:visibility="invisible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#bc000000"
                        android:gravity="center"
                        android:id="@+id/linearLayout70" >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/swapImage"
                            android:layout_gravity="center"
                            android:src="@drawable/laptop_experts"
                            android:cropToPadding="true"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Basics"
                            android:id="@+id/swapTitle"
                            android:textColor="#ffffff"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Guide to app"
                            android:id="@+id/swapSubtitle"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#bc000000">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/helpCenterRV"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#bc000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swapSheildButton"
                    android:src="@drawable/shutter_up_white"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Press back to exit pannel"
                    android:id="@+id/textView589"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
