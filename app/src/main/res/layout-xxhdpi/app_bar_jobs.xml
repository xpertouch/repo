<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:statusBarScrim="@null"
    tools:context="corp.burenz.expertouch.activities.Jobs"
    app:layout_scrollFlags="scroll|scroll|enterAlways" >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        app:statusBarScrim="@null"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay"
        app:layout_scrollFlags="scroll|scroll|scroll|enterAlways"
        android:background="@color/vectorColor"
        app:elevation="0dp"
        android:id="@+id/myCustView">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_jobs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:statusBarScrim="@null"
            android:background="@color/newVector"
            app:popupTheme="@style/PopupOverlay"
            android:gravity="center_vertical"
            app:title=" "
            android:layout_gravity="center_vertical"
            android:titleTextColor="#ffffff"
            app:layout_scrollFlags="snap|scroll|scroll|enterAlways">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="left"
                android:foregroundGravity="left"
                android:layout_marginRight="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1clickAway"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:id="@+id/xperJobs" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="2dp"
                    android:textColor="#ffffff"
                    android:id="@+id/touchJobs"
                    android:visibility="gone" />

            </LinearLayout>



        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newVector">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:accessibilityLiveRegion="assertive"
                    android:visibility="visible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:id="@+id/searchBarLayout">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <SearchView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/searchViewJobs"
                                    android:gravity="center_vertical"
                                    android:iconifiedByDefault="true"
                                    android:orientation="horizontal"
                                    android:clickable="true"
                                    android:inputType="text"
                                    android:imeOptions="actionSearch"
                                    android:background="#ffffff" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:paddingRight="10dp"
                                android:visibility="visible"
                                android:id="@+id/searchJobOppurtunities"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:background="#ffffff" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:background="#ffffff"
                                    android:layout_marginLeft="10dp">


                                    <TextView
                                        android:text="Search for companies, jobs, and more"
                                        android:id="@+id/searchViewTint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#d6d6d6"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>



                        </RelativeLayout>

                    </LinearLayout>


                    </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_jobs"/>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/subOne">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="POST ADD"
            android:layout_margin="5dp"
    android:textColor="#908989"
    android:textStyle="bold"
    android:textSize="13dp"
    android:typeface="serif"
            android:id="@+id/postAddView" />
</android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/subTwo">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY POSTS"
            android:layout_margin="5dp"
            android:textColor="#908989"
            android:textStyle="bold"
            android:textSize="13dp"
            android:typeface="serif"
            android:id="@+id/myPostsView" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/posts_whit"
        app:backgroundTint="@color/newVector"
        android:scaleType="centerCrop" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_trending_up_black_24dp"
        app:backgroundTint="@color/newVector"
        android:scaleType="centerCrop" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/postAddFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/add"
        android:scaleType="centerCrop"
        app:pressedTranslationZ="12dp"
        android:visibility="gone"
        app:layout_behavior="corp.burenz.expertouch.util.ScrollingFABBehavior"
        app:backgroundTint="@color/newVector" />

</android.support.design.widget.CoordinatorLayout>
