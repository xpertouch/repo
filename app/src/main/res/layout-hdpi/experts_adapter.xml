<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expertCard">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center">




                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="0dp"
                            android:id="@+id/view9"
                            android:background="#ffffff"

                            android:layout_gravity="center"
                            android:layout_marginTop="3dp">



                            <com.android.volley.toolbox.NetworkImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/expertAvtarIV"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:src="@raw/expert_de" />



                        </android.support.v7.widget.CardView>



                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/circularView"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:cropToPadding="false"
                            android:src="#00000000"
                            android:maxWidth="100dp"
                            android:minHeight="100dp"
                            android:visibility="gone" />


                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/takeMeToProfile"
                    android:layout_marginTop="1dp"
                    android:minHeight="60dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Burhan ud din Drabu"
                        android:id="@+id/expertName"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Android Developer"
                        android:id="@+id/expertExpertise"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="4 Years Experience"
                        android:id="@+id/expertExperience"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/vectorColor" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/shutterUp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:id="@+id/shutterUpButton"
                            android:src="@drawable/shutter_up"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/statusShutterFlipper"
                android:inAnimation="@anim/md_styled_slide_up_slow"
                android:outAnimation="@anim/md_styled_slide_down_slow"
                android:layout_gravity="left">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:gravity="left">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#80000000" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/shutterDown"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/shutter_down"
                            android:layout_margin="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_gravity="left">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:visibility="visible"
                            android:gravity="left">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="left"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Expert Status"
                                    android:id="@+id/textView279"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="\n"
                                    android:id="@+id/expertStatus"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center_vertical|center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Major Skills"
                                    android:id="@+id/textView274"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center_vertical|center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="\n\n"
                                    android:id="@+id/expertSkills"
                                    android:textColor="#ffffff"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="left" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#80000000"
                        android:gravity="bottom|right"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addExpertOffline"
                            android:src="@drawable/fav_checked"
                            android:text="Add to Favourites"
                            android:textColor="#ffffff"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView198"
                            android:src="@drawable/fav_checked"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/visitProfile"
                            android:src="@drawable/next"
                            android:text="Visit Profile"
                            android:textColor="#ffffff"
                            android:textSize="13dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="#00000000"
                    android:id="@+id/hight">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView89"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Burhan ud din Drabu"
                            android:id="@+id/textView276"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#00000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Android Developer"
                            android:id="@+id/textView277"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12dp"
                            android:textColor="#00000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="4 Years Experience "
                            android:id="@+id/textView278"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#00000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout8" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageView96"
                                android:src="@drawable/shutter_up"
                                android:scaleType="centerCrop"
                                android:layout_marginBottom="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </ViewFlipper>

        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>