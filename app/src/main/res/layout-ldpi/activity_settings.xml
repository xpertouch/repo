                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:autoStart="true"
                            android:inAnimation="@anim/card_animation">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="You may recieve newsletters from us as well"
                                android:id="@+id/textView515"
                                android:textColor="#ffffff"
                                android:textIsSelectable="true"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Keeping Special Characters helps secure your account"
                                android:id="@+id/textView486"
                                android:textColor="#ffffff"
                                android:textIsSelectable="true"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="You can only modify email before verification"
                                android:id="@+id/textView516"
                                android:textColor="#ffffff"
                                android:textIsSelectable="true"
                                android:textSize="10dp" />
                        </ViewFlipper>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="New! add to-dos to your Profile"
                    android:id="@+id/myDiaTitle"
                    android:textSize="17dp"
                    android:textColor="#b4000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Use to-dos to remind you when to call an expert if you already set a reminder to call"
                    android:id="@+id/myDiaSubtitle"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dim_foreground_disabled_material_light"
                    android:layout_marginRight="15dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/modifyStateSpinner"
                    android:focusable="false"
                    android:entries="@array/listOfStates"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:visibility="gone" />

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordFlipper"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center_horizontal"
                    android:inAnimation="@anim/md_styled_slide_up_slow"
                    android:outAnimation="@anim/md_styled_slide_down_slow"
                    android:autoStart="false">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/myDiaEditText"
                        android:layout_gravity="center_horizontal"
                        android:background="#00000000"
                        android:minHeight="40dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/newPasswordET"
                        android:layout_gravity="center_horizontal"
                        android:background="#00000000"
                        android:minHeight="40dp"
                        android:hint="Enter New Password" />

                </ViewFlipper>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView499"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/line"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp" />

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/settingsProgressFlipper"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="CANCEL"
                            android:id="@+id/cancelChanges"
                            android:layout_marginRight="10dp"
                            android:typeface="sans"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="SAVE CHANGES"
                            android:id="@+id/saveChanges"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/newVector"
                            android:typeface="sans"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ProgressBar
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar41" />
                    </LinearLayout>

                </ViewFlipper>
            </LinearLayout>

        </ViewFlipper>

    </LinearLayout>
</RelativeLayout>
