    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="corp.burenz.expertouch.activities.SettingsActivity"
    android:background="#ffffff"
    android:padding="0dp">


    <LinearLayout
