<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView153"
                android:scaleType="centerCrop"
                android:background="#80000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cfffffff" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#c6000000"
                            android:id="@+id/stepOne"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Step 1"
                                android:id="@+id/textView350"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Enter Number"
                                android:id="@+id/textView351"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#b6ffffff" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/stepTwo"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Step 2"
                                android:id="@+id/textView353"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Enter OTP"
                                android:id="@+id/textView354"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#b6ffffff" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/stepThree"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Step 3"
                                android:id="@+id/textView355"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="New Password"
                                android:id="@+id/textView383"
                                android:textColor="#ffffff"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cfffffff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <ViewFlipper
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/editTextsFeilds" >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:id="@+id/resetEmail"
                                    android:background="#00000000"
                                    android:hint="Enter Phone Number"
                                    android:textColorHint="#b1ffffff"
                                    android:textSize="15dp"
                                    android:gravity="bottom|center"
                                    android:textColor="#ffffff"
                                    android:inputType="phone" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textEmailAddress"
                                    android:ems="10"
                                    android:id="@+id/enterOTP"
                                    android:background="#00000000"
                                    android:hint="Enter OTP"
                                    android:textColorHint="#b1ffffff"
                                    android:textSize="15dp"
                                    android:gravity="bottom|center"
                                    android:textColor="#ffffff" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text"
                                    android:ems="10"
                                    android:id="@+id/enterPassword"
                                    android:background="#00000000"
                                    android:hint="Enter New Password"
                                    android:textColorHint="#b1ffffff"
                                    android:textSize="15dp"
                                    android:gravity="bottom|center"
                                    android:textColor="#ffffff" />
                            </ViewFlipper>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Step 1 "
                                android:id="@+id/stepTitileV"
                                android:layout_gravity="center_horizontal"
                                android:textSize="14dp"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="You may proceed by Entering the Phone Number Associated with Your Account"
                                android:id="@+id/stepSubtitleV"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12dp"
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_margin="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ffffff" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#ffffff" />

                                <ViewFlipper
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/bottomButtonsFlipper"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >

                                        <ViewFlipper
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/otpSentFlipper"
                                            android:layout_weight="1" >

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Proceed"
                                                android:id="@+id/proceedButton"
                                                android:layout_gravity="center_horizontal"
                                                android:background="#00000000"
                                                android:textStyle="bold"
                                                android:textColor="#ffffff"
                                                android:layout_weight="1" />

                                            <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_gravity="left"
                                                android:gravity="left|center_vertical" >

                                                <ProgressBar
                                                    android:layout_width="35dp"
                                                    android:layout_height="35dp"
                                                    android:id="@+id/progressBar20"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="Sending Reset Code to your Phone Number"
                                                    android:id="@+id/textView384"
                                                    android:layout_gravity="center_vertical"
                                                    android:textColor="#ffffff"
                                                    android:gravity="center_vertical" />
                                            </LinearLayout>

                                        </ViewFlipper>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >

                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Subit OTP"
                                            android:id="@+id/submitOTP"
                                            android:layout_gravity="center_horizontal"
                                            android:background="#00000000"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"
                                            android:layout_weight="1" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >

                                        <ViewFlipper
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/passwordChangeProgress"
                                            android:layout_weight="1" >

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Submit Password"
                                                android:id="@+id/changePass"
                                                android:layout_gravity="center_horizontal"
                                                android:background="#00000000"
                                                android:textStyle="bold"
                                                android:textColor="#ffffff"
                                                android:layout_weight="1" />

                                            <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_gravity="left"
                                                android:gravity="left|center_vertical" >

                                                <ProgressBar
                                                    android:layout_width="35dp"
                                                    android:layout_height="35dp"
                                                    android:id="@+id/progressBar22"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                                    android:text="updating new Password"
                                                    android:id="@+id/textView349"
                                                    android:layout_gravity="center_vertical"
                                                    android:textColor="#ffffff"
                                                    android:gravity="center_vertical" />
                                            </LinearLayout>
                                        </ViewFlipper>
                                    </LinearLayout>
                                </ViewFlipper>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#ffffff" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>