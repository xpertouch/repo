<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        android:id="@+id/view13"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#efffffff"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/saleBanner"
                        android:scaleType="centerCrop"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Burenz Corporation"
                            android:id="@+id/companyTitleB"
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Posted on : "
                                android:id="@+id/textView313"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Nov 24 2016"
                                android:id="@+id/saleDate"
                                android:textColor="#a0a0a0"
                                android:textSize="10dp"
                                android:typeface="serif" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/attachedBannerView"
                        android:src="@raw/sample"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:visibility="visible" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:measureWithLargestChild="false">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom" >

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:background="#b3fcfdfd"
                            android:id="@+id/styleSheet">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="xpertCity with a header"
                                    android:id="@+id/saleTitle"
                                    android:textColor="#000000"
                                    android:typeface="serif"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="1dp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:id="@+id/textView302"
                                    android:textColor="#00000000"
                                    android:typeface="serif"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="15dp"
                                    android:text="xpertCity"
                                    android:background="#e96656"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Cheeni Chowk Anantnag Jammu and Kashmir"
                                    android:id="@+id/companyCityB"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:typeface="serif" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Well Gone are the days when you actually had to call all of your accuqvantities to tell tell which expert you could hire for your job, Now The team of Burenz Corporation has gifted us with an awesome Application that shall help you get you work done in seconds. The team of xpertCity wishes yiou all the very Best"
                                android:id="@+id/saleDiscription"
                                android:layout_margin="10dp"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="12dp"
                                android:typeface="sans" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/totalLikesTV"
                                    android:typeface="normal"
                                    android:layout_marginLeft="10dp"
                                    android:text="0"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textView98"
                                    android:typeface="normal"
                                    android:layout_marginLeft="5dp"
                                    android:text="people like this"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#b3fcfdfd">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:minHeight="45dp">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/thumbsUpAdd"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:cropToPadding="true"
                        android:background="#00000000"
                        android:padding="5dp"
                        android:src="@drawable/thumbsup_gray"
                        android:visibility="gone" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/thumbsDownAdd"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:cropToPadding="true"
                        android:background="#00000000"
                        android:padding="5dp"
                        android:src="@drawable/thumbsup"
                        android:visibility="gone" />

                    <ViewFlipper
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thumbsFlipper"
                        android:inAnimation="@anim/card_animation"
                        android:autoStart="false"
                        android:soundEffectsEnabled="false"
                        android:outAnimation="@anim/abc_popup_exit"
                        android:visibility="gone">

                    </ViewFlipper>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"
                            android:typeface="monospace" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView218"
                            android:src="@drawable/thumbsup"
                            android:scaleType="centerInside" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:visibility="gone"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/line"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/share"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:cropToPadding="true"
                        android:background="#00000000"
                        android:padding="4dp"
                        android:visibility="gone" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share"
                        android:id="@+id/shareSalesB"
                        android:background="#00000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:visibility="invisible" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/companyProfileB"
                        android:src="@drawable/add_company"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:cropToPadding="true"
                        android:padding="4dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    </LinearLayout>