<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/favExpertCard"
        android:visibility="visible">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abffffff" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView95"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account_circle_black_24dp"
                            android:scaleType="centerCrop" />

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            android:id="@+id/view9"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp">



                            <com.android.volley.toolbox.NetworkImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/offlineAvtarIV"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:src="@raw/expert_de" />



                        </android.support.v7.widget.CardView>



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/linearLayout57" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Burhan ud din Drabu"
                        android:id="@+id/favExpertName"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:background="#00000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Android Developer"
                        android:id="@+id/favEXpertExpertise"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="4 Years Experience"
                        android:id="@+id/favExpertExperience"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/vectorColor" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout58" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/favShutterUp"
                            android:src="@drawable/shutter_up"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/favPannelFlipper"
                android:inAnimation="@anim/md_styled_slide_up_slow"
                android:outAnimation="@anim/md_styled_slide_down_slow"
                android:layout_gravity="left"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:gravity="left" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#80000000" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/favShutterDown"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/shutter_down"
                            android:layout_margin="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#80000000"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_gravity="left" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:visibility="visible"
                            android:gravity="left" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_gravity="left" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Expert Status"
                                    android:id="@+id/textView443"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="left" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="\n"
                                    android:id="@+id/favExpertStatus"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center_vertical|center"
                                    android:textSize="10dp"
                                    android:textStyle="italic"
                                    android:layout_gravity="left" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Major Skills"
                                    android:id="@+id/textView445"
                                    android:textColor="#ffffff"
                                    android:gravity="left|center_vertical|center"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="left" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="\n\n"
                                    android:id="@+id/favExpertSkills"
                                    android:textColor="#ffffff"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="left" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#80000000"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/deleteFavExpert"
                            android:src="@drawable/fav_checked"
                            android:text="Delete"
                            android:textColor="#ffffff"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView454"
                            android:src="@drawable/fav_checked"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:background="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/visitFavExpert"
                            android:src="@drawable/next"
                            android:layout_margin="5dp"
                            android:text="Visit Profile"
                            android:textColor="#ffffff"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="#00000000"
                    android:id="@+id/linearLayout60" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView155"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Burhan ud din Drabu"
                            android:id="@+id/textView456"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#00000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Android Developer"
                            android:id="@+id/textView457"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12dp"
                            android:textColor="#00000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="4 Years Experience "
                            android:id="@+id/textView458"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#00000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout59" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageView156"
                                android:src="@drawable/shutter_up"
                                android:scaleType="centerCrop"
                                android:layout_marginBottom="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ViewFlipper>
        </RelativeLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/emptyExperts"
        android:visibility="gone"
        android:background="#ffffff">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:cropToPadding="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:iiv_color="#777777"
            app:iiv_icon="@string/gmd_local_play"
            android:id="@+id/testzcscs" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="It all begins with adding favourites "
            android:id="@+id/textView207"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tap on &quot;Add to my Favourites&quot; to save Profiles for offline mode"
            android:id="@+id/textView272"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>