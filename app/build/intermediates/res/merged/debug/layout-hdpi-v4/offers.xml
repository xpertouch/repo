<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewOffers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/myBucketRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/loadProgressBucket"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/loadSmart">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="225dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardElevation="2dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/view12"
                        android:minHeight="200dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:id="@+id/wrapCard">

                            <ProgressBar
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/progressBar36"
                                android:layout_marginTop="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Please wait"
                                android:id="@+id/textView661"
                                android:textColor="#717171"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text=" We  are Getting Offers from your State    "
                                android:id="@+id/textView637"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_margin="10dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/noAdvertsBucket"
            android:visibility="gone"
            android:layout_marginBottom="160dp" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/loadSmartOffers">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="225dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardElevation="2dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/view12Offers"
                        android:minHeight="200dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:id="@+id/wrapCardOffers">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageView41"
                                android:layout_margin="10dp"
                                android:src="@drawable/nojobs" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="No Items Found"
                                android:id="@+id/textView661Offers"
                                android:textColor="#717171"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="No Promotions in this feild yet"
                                android:id="@+id/textView637Offers"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_margin="10dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
