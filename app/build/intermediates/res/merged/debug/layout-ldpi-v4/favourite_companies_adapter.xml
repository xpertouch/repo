<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCardView"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#fafafa"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:visibility="visible">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4ffffff"
                android:focusableInTouchMode="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView22"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/line"
                    android:visibility="visible" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#fafafa">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="IAC SOFTWARE SOLUTIONS"
                            android:id="@+id/companyFTitle"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/vectorColor"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Nov 24 2016"
                            android:id="@+id/companyFDate"
                            android:textColor="#a0a0a0"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="#fafafa">

                            <ViewFlipper
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/switchFeedsFC"
                                android:inAnimation="@anim/fab_open"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/details"
                                    android:scaleType="center"
                                    android:cropToPadding="true"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/openCase" />

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/closeCase"
                                    android:src="@drawable/close"
                                    android:scaleType="center"
                                    android:layout_gravity="center"/>

                            </ViewFlipper>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fafafa"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/jobCountFc"
                        android:visibility="visible"
                        android:background="#fafafa" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fafafa"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/savedCompanyImage"
                        android:src="@raw/companydef"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/favouritesFlipper"
                        android:inAnimation="@anim/md_styled_slide_up_slow"
                        android:outAnimation="@anim/md_styled_slide_down_slow">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="#80000000"
                                android:visibility="gone"></LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="#00000000"
                                    android:visibility="visible"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:background="#00000000"
                                        android:gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/callFeedFav"
                                            android:src="@drawable/call_blue"
                                            android:padding="10dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="#00000000"
                                    android:visibility="visible"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/mailFeedFav"
                                            android:src="@drawable/mail"
                                            android:padding="10dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="#00000000"
                                    android:visibility="visible"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:background="#00000000"
                                        android:gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/removeFromCompany"
                                            android:src="@drawable/delete_blue"
                                            android:padding="10dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="#00000000"
                                    android:visibility="visible"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/shareFeedFav"
                                            android:src="@drawable/share"
                                            android:padding="10dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="#00000000"
                                    android:visibility="visible"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/takeMeToProfile"
                                            android:padding="10dp"
                                            android:src="@drawable/add_company" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00000000"></LinearLayout>

                    </ViewFlipper>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/nothingHere"
        android:visibility="gone"
        android:background="#ffffff">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:cropToPadding="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:iiv_color="#777777"
            app:iiv_icon="@string/gmd_local_play"
            android:id="@+id/testzcscs" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="It all begins with adding favourites "
            android:id="@+id/textView65"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tap on &quot;Add to my Favourites&quot; to save Jobs for offline mode"
            android:id="@+id/textView509"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </LinearLayout>


</LinearLayout>